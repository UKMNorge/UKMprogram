{% extends "Layout/base.html.twig" %}


{% block content %}
	<table class="program grovsortering">
		<tbody>
			<tr>
				{% for hendelse in monstring.getProgram().getAll() if hendelse.getId() in show %}
					<td class="kolonne tot-{{ monstring.getAntallDager() }}">					
						<div class="hendelse panel panel-{{ hendelse.erSynligRammeprogram() ? 'success' : 'danger' }}" data-id="{{ hendelse.getId() }}">
							<div class="panel-heading">
								<h3 class="panel-title">
									{{ hendelse.getNavn() }}
								</h3>
							</div>

							<div class="panel-body">
								<ol class="list-unstyled line-sep">
									{% for innslag in hendelse.getInnslag().getAll() %}
										<li class="innslag" data-id="{{ innslag.getId() }}">
											<div class="infos">
												<abbr title="{{ innslag.getPersoner().getAntall() }} personer">
													{{ innslag.getPersoner().getAntall() }}p
												</abbr> | 
												{% if innslag.getType().harTitler() %}
													{% if innslag.getType().harTid() %}
														{{ innslag.getVarighet().getCompact() }}<br />
													{% else %}
														- <br />
													{% endif %}
												{% endif %}
												
												<small>
													{{ monstring.getType() == 'land' ? innslag.getFylke() : innslag.getKommune() }}
												</small>
											</div>
											{{ innslag.getNavn()|upper }}
											<br />
											<small>
												<span class="label label-kat-{{ innslag.getType().getKey() }}">{{ innslag.getType()|upper }}</span>
												{{ innslag.getSjanger() }}
											</small>
											<div class="clearfix"></div>
										</li>
									{% else %}
										<li class="text-danger" style="border-bottom: none;">
											Hendelsen har ingen innslag enda
										</li>
									{% endfor %}
								</ol>
							</div>
						</div>
					</td>
				{% endfor %}
			</tr>
		</tbody>
	</table>
{% endblock %}